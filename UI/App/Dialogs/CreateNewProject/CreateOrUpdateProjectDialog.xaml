<?xml version="1.0" encoding="utf-8" ?>
<ContentPage
    x:Class="GT4.UI.Dialogs.CreateOrUpdateProjectDialog"
    xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
    xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
    xmlns:components="clr-namespace:GT4.UI.Components"
    xmlns:resources="clr-namespace:GT4.UI.Resources;assembly=GT4.UI.Resources"
    xmlns:toolkit="http://schemas.microsoft.com/dotnet/2021/maui/toolkit"
    x:Name="Root">

  <components:PageLayout>
    <components:PageLayout.Header>
      <Label
          Style="{StaticResource PageTitle}"
          Text="{x:Static resources:UIStrings.WndTitleCreateNewProjectDialog}" />
    </components:PageLayout.Header>

    <components:PageLayout.Body>
      <ScrollView>
        <VerticalStackLayout
            Spacing="{StaticResource PageContentSpacing}"
            VerticalOptions="Center">

          <Entry
              x:Name="ProjectNameEntry"
              HorizontalOptions="Fill"
              Placeholder="{x:Static resources:UIStrings.TxtPlaceholderPtojectName}"
              Text="{Binding ProjectName, Source={x:Reference Root}}" />

          <Entry
              x:Name="ProjectDescriptionEntry"
              HorizontalOptions="Fill"
              Placeholder="{x:Static resources:UIStrings.TxtPlaceholderProjectDescription}"
              Text="{Binding ProjectDescription, Source={x:Reference Root}}" />

        </VerticalStackLayout>
      </ScrollView>
    </components:PageLayout.Body>

    <components:PageLayout.Footer>
      <Button
          x:Name="CreateProjectBtn"
          Clicked="OnCreateProjectBtn"
          FontSize="Large"
          HorizontalOptions="Fill"
          Text="{Binding CreateProjectBtName, Source={x:Reference Root}}" />
    </components:PageLayout.Footer>
  </components:PageLayout>
</ContentPage>
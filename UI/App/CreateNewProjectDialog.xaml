<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             xmlns:toolkit="http://schemas.microsoft.com/dotnet/2021/maui/toolkit"
             x:Class="GT4.UI.CreateNewProjectDialog"
             Title="{Binding DialogTitle}">
  <ScrollView>

    <VerticalStackLayout Padding="20" Spacing="10"             
>

      <Entry
          x:Name="ProjectNameEntry"
          Placeholder="{Binding ProjectNamePlaceholder}"
          Text="{Binding ProjectName}"
          HorizontalOptions="Fill"/>

      <Button
          x:Name="CreateProjectBtn"
          Text="{Binding CreateProjectBtName}" 
          FontSize="Large"
          Command="{Binding CreateNewProjectCommand}"
          HorizontalOptions="Fill" />

    </VerticalStackLayout>

  </ScrollView>
</ContentPage>
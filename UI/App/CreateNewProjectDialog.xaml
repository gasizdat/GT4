<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             xmlns:toolkit="http://schemas.microsoft.com/dotnet/2021/maui/toolkit"
             x:Class="GT4.UI.CreateNewProjectDialog"
             xmlns:resources="clr-namespace:GT4.UI.Resources;assembly=GT4.UI.Resources"
             Title="{x:Static resources:UIStrings.WndTitleCreateNewProjectDialog}">
  <ScrollView>

    <VerticalStackLayout Padding="20" Spacing="10" VerticalOptions="Center">

      <Entry
          x:Name="ProjectNameEntry"
          Placeholder="{x:Static resources:UIStrings.TxtPlaceholderPtojectName}"
          Text="{Binding ProjectName}"
          HorizontalOptions="Fill"/>

      <Entry
          x:Name="ProjectDescriptionEntry"
          Placeholder="{x:Static resources:UIStrings.TxtPlaceholderProjectDescription}"
          Text="{Binding ProjectDescription}"
          HorizontalOptions="Fill"/>

      <Button
          x:Name="CreateProjectBtn"
          Text="{Binding CreateProjectBtName}" 
          FontSize="Large"
          Clicked="OnCreateProjectBtn"
          HorizontalOptions="Fill" />

    </VerticalStackLayout>

  </ScrollView>
</ContentPage>
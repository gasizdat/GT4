<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             xmlns:toolkit="http://schemas.microsoft.com/dotnet/2021/maui/toolkit"
             x:Class="GT4.UI.CreateNewProjectDialog"
             Title="{Binding DialogTitle}">
  <ScrollView>

    <VerticalStackLayout Padding="200" Spacing="30" VerticalOptions="Center">

      <Entry
          x:Name="ProjectNameEntry"
          Placeholder="{Binding ProjectNamePlaceholder}"
          Text="{Binding ProjectName}"
          HorizontalOptions="Fill"/>

      <Entry
          x:Name="ProjectDescriptionEntry"
          Placeholder="{Binding ProjectDescriptionPlaceholder}"
          Text="{Binding ProjectDescription}"
          HorizontalOptions="Fill"/>

      <Button
          x:Name="CreateProjectBtn"
          Text="{Binding CreateProjectBtName}" 
          FontSize="Large"
          Clicked="OnCreateProjectBtn"
          HorizontalOptions="Fill" />

    </VerticalStackLayout>

  </ScrollView>
</ContentPage>
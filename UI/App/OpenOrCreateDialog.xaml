<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="GT4.UI.OpenOrCreateDialog"
             xmlns:gt4_ui="clr-namespace:GT4.UI"
             Title="{Binding DialogTitle}">
  <ScrollView>

    <VerticalStackLayout Padding="20" Spacing="10">
      <Label 
            Text="{Binding DialogHint}"
            VerticalOptions="Center" 
            HorizontalOptions="Center" />

      <CollectionView ItemsSource="{Binding Projects}" SelectionMode="Single" SelectionChanged="OnProjectSelected">
        <CollectionView.ItemTemplate>
          <DataTemplate x:DataType="gt4_ui:ProjectListItem">
            
            <VerticalStackLayout>
              <FlexLayout Direction="Row">
                
                <Image 
                  Source="project_icon.png" 
                  WidthRequest="32" 
                  HeightRequest="32" 
                  Margin="2"/>
                
                <Label 
                  FlexLayout.Grow="1"
                  Text="{Binding Name}" 
                  FontSize="20" 
                  FontAttributes="Bold" 
                  Padding="2"/>
                
                <Button 
                  Text="❌" 
                  Clicked="OnDeleteProjectSelected"
                  WidthRequest="32" 
                  HeightRequest="32"
                  Padding="0"/>
                
              </FlexLayout>
              
              <Label Text="{Binding Path}" FontSize="12" Padding="2"/>
            </VerticalStackLayout>
          </DataTemplate>
        </CollectionView.ItemTemplate>
      </CollectionView>

    </VerticalStackLayout>

  </ScrollView>

</ContentPage>
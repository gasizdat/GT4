<?xml version="1.0" encoding="utf-8" ?>
<ContentView xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="GT4.UI.App.Components.DateInfoView"
             x:Name="Root">
  <Grid
      ColumnDefinitions="Auto, *"
      RowDefinitions="Auto"
      ColumnSpacing="20">
    
    <Label 
        Grid.Column="0"
        Grid.Row="0"
        Style="{StaticResource ContentFieldName}"
        Text="{Binding Caption, Source={x:Reference Root}}"/>

    <Label 
        Grid.Column="1"
        Grid.Row="0"
        Style="{StaticResource ContentFieldValue}"
        Text="{Binding DateText, Source={x:Reference Root}}"/>
    
  </Grid>
</ContentView>

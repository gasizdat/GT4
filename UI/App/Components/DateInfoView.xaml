<?xml version="1.0" encoding="utf-8" ?>
<ContentView
    x:Class="GT4.UI.App.Components.DateInfoView"
    xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
    xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
    x:Name="Root">
  <Grid
      ColumnDefinitions="Auto, *"
      ColumnSpacing="20"
      RowDefinitions="Auto">

    <Label
        Grid.Row="0"
        Grid.Column="0"
        Style="{StaticResource ContentFieldName}"
        Text="{Binding Caption, Source={x:Reference Root}}" />

    <Label
        Grid.Row="0"
        Grid.Column="1"
        Style="{StaticResource ContentFieldValue}"
        Text="{Binding DateText, Source={x:Reference Root}}" />

  </Grid>
</ContentView>

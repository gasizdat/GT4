<?xml version="1.0" encoding="utf-8" ?>
<ContentView
    x:Class="GT4.UI.App.Components.PersonInfoView"
    xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
    xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
    x:Name="Root">
  <Grid
      ColumnDefinitions="Auto, *"
      ColumnSpacing="20"
      RowDefinitions="*, Auto">

    <Image
        Grid.Row="0"
        Grid.RowSpan="2"
        Grid.Column="0"
        IsVisible="{Binding ShowPhoto, Source={x:Reference Root}}"
        Source="{Binding Photo, Source={x:Reference Root}}"
        Style="{Binding PhotoStyle, Source={x:Reference Root}, TargetNullValue={StaticResource PhotoThumbStyle}}" />

    <Label
        Grid.Row="0"
        Grid.Column="1"
        Style="{Binding NameLabelStyle, Source={x:Reference Root}, TargetNullValue={StaticResource CardTitle}}"
        Text="{Binding CommonName, Source={x:Reference Root}}" />

    <Label
        Grid.Row="1"
        Grid.Column="1"
        IsVisible="{Binding ShowDates, Source={x:Reference Root}}"
        Style="{Binding DatesLabelStyle, Source={x:Reference Root}, TargetNullValue={StaticResource CardContent}}"
        Text="{Binding LifeDates, Source={x:Reference Root}}" />

  </Grid>
</ContentView>

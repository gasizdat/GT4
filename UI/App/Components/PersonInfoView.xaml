<?xml version="1.0" encoding="utf-8" ?>
<ContentView xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="GT4.UI.App.Components.PersonInfoView"
             x:Name="Root">
  <Grid
      ColumnDefinitions="Auto, *"
      RowDefinitions="*, Auto"
      ColumnSpacing="20">

    <Image
        Grid.Column="0"
        Grid.Row="0"
        Grid.RowSpan="2"
        Source="{Binding Photo, Source={x:Reference Root}}"
        Style="{Binding PhotoStyle, Source={x:Reference Root}, TargetNullValue={StaticResource PhotoThumbStyle}}"
        IsVisible="{Binding ShowPhoto, Source={x:Reference Root}}"/>

    <Label 
        Grid.Column="1"
        Grid.Row="0"
        Style="{Binding NameLabelStyle, Source={x:Reference Root}, TargetNullValue={StaticResource ContentTitle}}"
        Text="{Binding CommonName, Source={x:Reference Root}}"/>

    <Label 
        Grid.Column="1"
        Grid.Row="1"
        Style="{Binding DatesLabelStyle, Source={x:Reference Root}, TargetNullValue={StaticResource ContentSubtitle}}"
        Text="{Binding LifeDates, Source={x:Reference Root}}"
        IsVisible="{Binding ShowDates, Source={x:Reference Root}}"/>

  </Grid>
</ContentView>

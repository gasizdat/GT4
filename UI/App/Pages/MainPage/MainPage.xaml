<?xml version="1.0" encoding="utf-8" ?>
<ContentPage
    x:Class="GT4.UI.App.Pages.MainPage"
    xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
    xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
    xmlns:resources="clr-namespace:GT4.UI.Resources;assembly=GT4.UI.Resources">

  <ScrollView>
    <VerticalStackLayout
        Padding="30,0"
        Spacing="25">

      <Picker
          Title="{x:Static resources:UIStrings.PkrLanguageHint}"
          HorizontalOptions="End"
          ItemDisplayBinding="{Binding Name}"
          ItemsSource="{Binding Languages}"
          SelectedItem="{Binding SelectedLanguage}" />

      <Image
          Aspect="AspectFit"
          HeightRequest="185"
          Source="gt4_logo.png" />

      <Label
          HorizontalOptions="Center"
          HorizontalTextAlignment="Center"
          SemanticProperties.HeadingLevel="Level1"
          Style="{StaticResource ContentTitle}"
          Text="{x:Static resources:UIStrings.AppGeneralName}" />

      <Label
          HorizontalOptions="Center"
          HorizontalTextAlignment="Center"
          SemanticProperties.Description="Welcome to GT4 app powered by dot net Multi platform App UI"
          SemanticProperties.HeadingLevel="Level2"
          Style="{StaticResource ContentSubtitle}"
          Text="{x:Static resources:UIStrings.AppGeneralWelcomeTitle}" />

      <Button
          x:Name="OpenOrCreateBtn"
          Command="{Binding NavigateToCreateOrOpenDialog}"
          CommandParameter="OpenOrCreateDialog"
          FontSize="Large"
          HorizontalOptions="Fill"
          SemanticProperties.Hint="{x:Static resources:UIStrings.BtnHintOpenOrCreateProject}"
          Text="{x:Static resources:UIStrings.BtnNameOpenOrCreateProject}" />

      <!--  TODO: Temporary code for testing — to be removed before production.  -->
      <VerticalStackLayout>

        <Label
            FontSize="11"
            Text="11" />
        <Label
            FontSize="12"
            Text="12" />
        <Label
            FontSize="Caption"
            Text="Caption" />
        <Label
            FontSize="14"
            Text="14" />
        <Label
            FontSize="Body"
            Text="Body" />
        <Label
            FontSize="Default"
            Text="Default" />
        <Label
            FontSize="Micro"
            Text="Micro" />
        <Label
            FontSize="16"
            Text="16" />
        <Label
            FontSize="Subtitle"
            Text="Subtitle" />
        <Label
            FontSize="Medium"
            Text="Medium" />
        <Label
            FontSize="Title"
            Text="Title" />
        <Label
            FontSize="Large"
            Text="Large" />
        <Label
            FontSize="Header"
            Text="Header" />

      </VerticalStackLayout>

    </VerticalStackLayout>
  </ScrollView>

</ContentPage>
